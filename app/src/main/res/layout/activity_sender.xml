<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SenderActivity">

    <TextView
        android:id="@+id/as_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi! This is The Sender Activity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:textSize="20sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/as_et_sending_data"
        app:layout_constraintTop_toBottomOf="@id/as_tv_title"
        android:layout_marginTop="30dp"
        android:hint="Enter a Value to Send"
        android:padding="10dp"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/as_btn_submit"
        android:text="Submit"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/as_et_sending_data"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>